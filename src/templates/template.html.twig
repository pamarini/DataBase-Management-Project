<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Group One Project</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <style>
        body {
            padding-top: 2rem;
            padding-bottom: 2rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h3 class="title">CS3413 Group Assignment - Group One</h3><h4 class="text-muted">{% block title %}{% endblock %}</h4>
        <hr>
        <div class="row">
            <div class="col-md-3">
                {% if auth.authenticated() %}
                    Welcome, {{ user.email }} <br>
                {% endif %}
                <div class="list-group">
                    <a href="/" class="list-group-item list-group-item-action">Home</a>
                    {% if user.role == 'user' %}
                        <a href="/stores" class="list-group-item list-group-item-action">Shop Items</a>
                        <a href="/cart" class="list-group-item list-group-item-action">Cart ({{ cart.count() }})</a>
                        <a href="/past" class="list-group-item list-group-item-action">Past Orders</a>
                    {% elseif user.role == 'manager' %}
                        <a href="/manage" class="list-group-item list-group-item-action">Manager</a>
                    {% elseif user.role == 'vendor' %}
                        <a href="/vendor" class="list-group-item list-group-item-action">Vendor</a>
                    {% endif %}
                    {% if auth.authenticated() %}
                        <a href="/logout" class="list-group-item list-group-item-action">Logout</a>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-9">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
</body>
</html>